worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
	worker_connections 1024;
}

http {
    resolver 127.0.0.11 valid=30s;
    server {
        listen 80;
        server_name 127.0.0.1;

        location /gitlab {
            set $gitlab_upstream       http://gitlab:80;
            proxy_pass          $gitlab_upstream;
            proxy_set_header    X-Forwarded-For $remote_addr;
            proxy_set_header    X-Real-IP $remote_addr;
            proxy_set_header    Host $http_host;
            proxy_set_header    X-NginX-Proxy true;
            proxy_redirect off;
        }

        location /wordpress {
            set $wordpress_upstream     http://wordpress/;
            # proxy_read_timeout      90;
            # proxy_connect_timeout   90;
            # proxy_redirect          off;
            proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header        X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-Host $host;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass              $wordpress_upstream;
            proxy_set_header        Host $host;
        }

        location /prometheus {
            set $prometheus_upstream    http://prometheus:9090/;
            proxy_pass          $prometheus_upstream;
            proxy_set_header    X-Forwarded-For $remote_addr;
            proxy_set_header    X-Real-IP $remote_addr;
            proxy_set_header    Host $http_host;
            proxy_set_header    X-NginX-Proxy true;
            proxy_redirect off;
        }

        location /buildbot {
            set $buildbot_upstream      http://buildbot:8010;
            proxy_pass          $buildbot_upstream;
            proxy_set_header    X-Forwarded-For $remote_addr;
            proxy_set_header    X-Real-IP $remote_addr;
            proxy_set_header    Host $http_host;
            proxy_set_header    X-NginX-Proxy true;
            proxy_redirect off;
        }

        location /cadvisor {
            set $cadvisor_upstream      http://cadvisor:8080;
            proxy_pass          $cadvisor_upstream;
            proxy_set_header    X-Forwarded-For $remote_addr;
            proxy_set_header    X-Real-IP $remote_addr;
            proxy_set_header    Host $http_host;
            proxy_set_header    X-NginX-Proxy true;
            proxy_redirect off;
        }
    }
}